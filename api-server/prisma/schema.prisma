generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  userId    BigInt    @id @default(autoincrement())
  email     String    @unique
  name      String

  // User-Video 1:N
  videos    Video[]

  // User-Token 1:N (한 유저가 여러 기기 사용 가능)
  tokens    Token[]
}

enum VideoStatus {
  PENDING   // 완료 전 (업로드 직후, 인코딩 중)
  COMPLETE  // 완료 후 (인코딩 완료, 서비스 가능)
}

model Video {
  videoId     BigInt     @id @default(autoincrement())
  s3Key       String?     @unique
  s3Url       String?
  uploadDate  String

  // 인코딩 상태 필드 (기본값은 PENDING)
  status      VideoStatus @default(PENDING)

  // Thumbnail
  thumbnailS3Key String?    @unique
  thumbnailS3Url String?

  // User-Video FK
  user        User      @relation(fields: [userId], references: [userId], onDelete: Cascade)
  userId      BigInt

  // Timestamp-Video N:1
  timestamps Timestamp[]

  // 사용자당 하루 1개 규칙
  @@unique([userId, uploadDate])
}

model Timestamp {
  timestampId   BigInt   @id @default(autoincrement())
  time          BigInt
  label         String

  // Timestamp-Video FK
  video         Video    @relation(fields: [videoId], references: [videoId], onDelete: Cascade)
  videoId       BigInt
}

model Token {
  tokenId     BigInt   @id @default(autoincrement())
  tokenValue  String   @unique

  // User-Token FK
  user        User     @relation(fields: [userId], references: [userId], onDelete: Cascade)
  userId      BigInt

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}